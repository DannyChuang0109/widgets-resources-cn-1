{
  "$schema": "https://json.schemastore.org/lerna.json",
  "version": "independent",
  "packages": [
    "packages/*/*"
  ],
  "command": {
    "bootstrap": {
      "npmClientArgs": [
        "--package-lock"
      ]
    },
    "version": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore: release",
      "allowBranch": "master"
    }
  }
}